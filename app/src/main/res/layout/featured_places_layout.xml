<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/feat_background_color"
    android:id="@+id/featured_container">

    <ImageView
        android:id="@+id/feat_place_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/kerala0"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/feat_place_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kerala Mystique"
            android:fontFamily="@font/amiko"
            android:textColor="@color/matt_black"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:layout_marginStart="10dp"
            android:textSize="12dp"/>

        <RatingBar
            android:id="@+id/MyRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:isIndicator="true"
            android:numStars="5"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:rating="4.0"
            android:stepSize="0.1" />

    </RelativeLayout>

</LinearLayout>